{
	"name": "tm-template-mailer",
	"version": "1.0.1",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --watch '.env' --exec 'ts-node' src/server.ts",
		"run": "NODE_ENV=production npm run build && npm run start",
		"xrun": "ts-node --project tsconfig.json src/server.ts",
		"build": "tsc",
		"scrub": "rm -rf node_modules/ dist/",
		"lint": "eslint --ext .js,.ts,.vue ./",
		"lintfix": "eslint --fix --ext .js,.ts,.vue ./",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\"",
		"cleanbuild": "rm -rf ./dist/ && npm run lintfix && npm run format && npm run build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"body-parser": "^1.20.3",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"email-addresses": "^5.0.0",
		"express": "^4.21.2",
		"express-cors": "^0.0.3",
		"html-to-text": "^9.0.5",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.10.1",
		"nunjucks": "^3.2.4",
		"sequelize": "^6.37.7",
		"sqlite3": "^5.1.7",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"synchronized-promise": "^0.3.1",
		"tm-api-server": "github:technomoron/tm-api-server"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.5",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/fs-extra": "^11.0.4",
		"@types/html-to-text": "^9.0.4",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/mjml": "^4.7.4",
		"@types/nodemailer": "^6.4.17",
		"@types/nunjucks": "^3.2.6",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"eslint": "^8.57.1",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-vue": "^9.33.0",
		"nodemon": "^3.1.9",
		"prettier": "^3.5.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vue-eslint-parser": "^10.1.3"
	}
}
